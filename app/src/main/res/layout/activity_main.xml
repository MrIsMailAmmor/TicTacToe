<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="411dp"
        android:layout_height="727dp"
        android:background="@color/purple_200"
        android:backgroundTint="@color/gold"
        android:gravity="center"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="2dp"
        tools:ignore="MissingConstraints">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/button3"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginStart="3pt"
                android:layout_marginEnd="2pt"
                android:layout_marginBottom="2pt"
                android:background="#9E9999"
                android:backgroundTint="@color/white"
                android:onClick="buClick"
                android:textColor="@color/white"
                android:textColorLink="#FFFFFF"
                android:textSize="24pt"
                app:backgroundTint="@color/red"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/button2"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginStart="3pt"
                android:layout_marginEnd="2pt"
                android:layout_marginBottom="2pt"
                android:background="#9E9999"
                android:backgroundTint="@color/black"
                android:hapticFeedbackEnabled="false"
                android:onClick="buClick"
                android:textColor="@color/white"
                android:textColorLink="#FFFFFF"
                android:textSize="24pt"
                app:backgroundTint="@color/red"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/button"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginStart="3pt"
                android:layout_marginEnd="2pt"
                android:layout_marginBottom="2pt"
                android:background="#9E9999"
                android:backgroundTint="@color/white"
                android:onClick="buClick"
                android:textColor="@color/white"
                android:textColorLink="#FFFFFF"
                android:textSize="24pt"
                app:backgroundTint="@color/red"
                tools:ignore="SpeakableTextPresentCheck" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:gravity="center">

            <Button
                android:id="@+id/button6"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginStart="3pt"
                android:layout_marginEnd="2pt"
                android:layout_marginBottom="2pt"
                android:background="#9E9999"
                android:backgroundTint="@color/white"
                android:onClick="buClick"
                android:textColor="@color/white"
                android:textColorLink="#FFFFFF"
                android:textSize="24pt"
                app:backgroundTint="@color/red" />

            <Button
                android:id="@+id/button5"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginStart="3pt"
                android:layout_marginEnd="2pt"
                android:layout_marginBottom="2pt"
                android:background="#9E9999"
                android:backgroundTint="@color/white"
                android:onClick="buClick"
                android:textColor="@color/white"
                android:textColorLink="#FFFFFF"
                android:textSize="24pt"
                app:backgroundTint="@color/red" />

            <Button
                android:id="@+id/button4"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginStart="3pt"
                android:layout_marginEnd="2pt"
                android:layout_marginBottom="2pt"
                android:background="#9E9999"
                android:backgroundTint="@color/white"
                android:onClick="buClick"
                android:textColor="@color/white"
                android:textColorLink="#FFFFFF"
                android:textSize="24pt"
                app:backgroundTint="@color/red" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/button9"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginStart="3pt"
                android:layout_marginEnd="2pt"
                android:layout_marginBottom="2pt"
                android:background="#9E9999"
                android:backgroundTint="@color/white"
                android:onClick="buClick"
                android:textColor="@color/white"
                android:textColorLink="#FFFFFF"
                android:textSize="24pt"
                app:backgroundTint="@color/red" />

            <Button
                android:id="@+id/button8"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginStart="3pt"
                android:layout_marginEnd="2pt"
                android:layout_marginBottom="2pt"
                android:background="#9E9999"
                android:backgroundTint="@color/white"
                android:onClick="buClick"
                android:textColor="@color/white"
                android:textColorLink="#FFFFFF"
                android:textSize="24pt"
                app:backgroundTint="@color/red" />

            <Button
                android:id="@+id/button7"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginStart="3pt"
                android:layout_marginEnd="2pt"
                android:layout_marginBottom="2pt"
                android:background="#9E9999"
                android:backgroundTint="@color/white"
                android:onClick="buClick"
                android:textColor="@color/white"
                android:textColorLink="#FFFFFF"
                android:textSize="24pt"
                app:backgroundTint="@color/red" />

        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/redo"
        android:layout_width="152dp"
        android:layout_height="65dp"
        android:onClick="redoBtn"
        android:text="Redo"
        android:textColor="#FFFCFC"
        android:textSize="12pt"
        android:textStyle="bold|italic"
        app:backgroundTint="@color/red"
        app:layout_constraintBottom_toBottomOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/ScoreText"
        android:layout_width="360dp"
        android:layout_height="89dp"
        android:background="@color/red"
        android:fontFamily="monospace"
        android:text="Player 1 : 0 Player 2 : 0"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15pt"
        app:layout_constraintBottom_toTopOf="@+id/redo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/TextBegin"
        android:layout_width="350dp"
        android:layout_height="76dp"
        android:fontFamily="casual"
        android:text="Tic Tac Toe Game"
        android:textAlignment="center"
        android:textSize="15pt"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tableLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>